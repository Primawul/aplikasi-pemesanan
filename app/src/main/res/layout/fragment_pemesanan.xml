<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Pemesanan">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/header"
        android:background="@drawable/header_bg"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="0dp"
        android:src="@drawable/pesan"
        android:textAlignment="center" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="240dp"
        android:orientation="vertical">


        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/edtnama"
            android:hint="NAMA"
            android:background="@drawable/ovalcorner"
            android:textColorHighlight="#0000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/edtemail"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"
            android:hint="EMAIL"
            android:background="@drawable/ovalcorner"
            android:textColorHighlight="#0000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/edtnotlp"
            android:layout_marginTop="10dp"
            android:hint="NO TELEPON"
            android:inputType="number"
            android:background="@drawable/ovalcorner"
            android:textColorHighlight="#0000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:id="@+id/edtperusahaan"
            android:hint="NAMA PERUSAHAAN"
            android:background="@drawable/ovalcorner"
            android:textColorHighlight="#0000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:id="@+id/edtaplikasi"
            android:hint="NAMA APLIKASI"
            android:background="@drawable/ovalcorner"
            android:textColorHighlight="#0000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/edtjenisapk"
            android:layout_marginTop="10dp"
            android:hint="JENIS APLIKASI"
            android:background="@drawable/ovalcorner"
            android:textColorHighlight="#0000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/edtdeskripsi"
            android:hint="DESKRIPSI"
            android:layout_marginTop="10dp"
            android:background="@drawable/ovalcorner"
            android:textColorHighlight="#0000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/edtbudget"
            android:hint="BUDGET"
            android:layout_marginTop="10dp"
            android:background="@drawable/ovalcorner"
            android:textColorHighlight="#0000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/edttimeline"
            android:hint="TIMELINE"
            android:layout_marginTop="10dp"
            android:background="@drawable/ovalcorner"
            android:textColorHighlight="#0000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_alignParentEnd="true" />


    </LinearLayout>

    <Button
        android:id="@+id/btnkirim"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="700dp"
        android:background="@drawable/custom1"
        android:text="GET YOUR SOLUTION"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />
        //android:onClick="bukaWA"

    </RelativeLayout>
</ScrollView>